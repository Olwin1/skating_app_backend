{
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": "./",
    "outDir": "./built",
    "allowJs": true,
    "target": "ES2022",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "typeRoots": ["./src/typings", "./node_modules/@types"],
    "types": ["node", "express"],
    "paths": {
      "*": ["src/typings/*"],
    }
  },
  "include": ["./src/**/*"]
}
